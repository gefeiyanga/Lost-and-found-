/* pages/demo01/default.wxss *//* 导入搜索框组件样式 */
@import "../../wxSearchView/wxSearchView.wxss";
page{
  margin: 0;padding: 0;
  box-sizing: border-box;
}
swiper{
  height: 340rpx;
  width: 700rpx;
  margin-left:25rpx; 
  margin-top: 25rpx;
}
swiper image{
  height: 100%;
  width: 100%;
  border-radius: 8rpx;
}
swiper-item .info{
  background: #f5f5f5;
  height:340rpx;
  border-radius: 8rpx;
}
swiper-item .temp,.weather,.city{
  color: #408bfd;
  padding: 20rpx;
}
.home{
  padding-left:25rpx;
  padding-top:10rpx; 
}
.banner{
  width: 700rpx;
  height:280rpx;
  margin-top:15rpx; 
  border-radius: 8rpx;
  text-align:center;
}
.a{
  color:#fefefe;
  font-size: 42rpx;
  line-height: 280rpx;
}
.banner1{
  background:linear-gradient(to bottom,#408bfd,#1c72f3);
}
.banner2{
  background:linear-gradient(to bottom,#408bfd,#1c72f3);
}