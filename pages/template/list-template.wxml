<template name="listTemp">
<view class='tempContainer'>
  <view class='avatar_date'>
    <image src="{{avatar}}"></image>
    <text>{{uname}}</text>
    <text class='date'>{{date}}</text>
  </view>
  <text class="title">{{title}}</text>
  <view class='content'>
    <text class='detail'>{{detail}}</text>
  </view>
  <view class='v-img'>
    <block wx:for="{{pic}}" wx:key="{{index}}">
      <image class='detailImg' mode='aspectFit' src="http://localhost/gfy/server/upload/{{pic[index]}}"></image> 
    </block>
  </view>
