/* pages/template/list-template.wxss */
.tempContainer{
  display: flex;
  flex-direction: column;
  border-bottom:1px solid #efefef;
  padding:5px 0;
  margin:20rpx 0 40rpx;
}
.content{
  height: 100rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.avatar_date {
  margin:10rpx 0 20rpx 10rpx;
}
.avatar_date image {
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}
.avatar_date text {
  font-size: 16px;
  vertical-align: middle;
  margin-left: 10px;
}
.avatar_date text.date{
  font-size: 12px;
  margin-left:280rpx; 
}
.title{
  font-size: 18px;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.detail,.name,.tele,.addr{
  font-size: 16px;
  margin:10rpx;
}
.v-img{
  text-align: center;
}
.detailImg{
  width: 98%;
  height: 400rpx;
  border-radius: 12rpx;
}
.love_attention image {
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
  margin-left:10rpx; 
}
.love_attention text {
  font-size: 14px;
  color: #666;
  vertical-align: middle;
  margin: 10rpx;
}