/**index.wxss**/
page{
  background-color: #fefefe;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
button{
  margin-top:300rpx;
  font-size: 36rpx;
  border-radius: 10rpx;
  background: #f5f5f5;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 80rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 60rpx;
  color: #1a1a1a;
  font-weight: bold;
}

.usermotto {
  text-align: center;
  margin-top: 100px;
  border: 1px solid #1a1a1a;  
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 30rpx;

}
.user-motto{
  font-weight: 200;
}